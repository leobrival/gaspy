<div class="d-flex">
  <div class="profile_name">
    <%= current_user.first_name %>
  </div>
  <div class="profile_email">
    <%= current_user.email %>
  </div>
<div class="d-flex jc">
  <div class="profile_address">
    <%= current_user.address %>
    <%= current_user.city %>
    <%= current_user.zip_code %>
  </div>
</div>
</div>
<div class="d-flex jc">
  <div id="curr" class="profile_last_name">
    <%= current_user.last_name %>
  </div>
  <div id="curr" class="profile_phone">
    <%= current_user.phone %>
  </div>
 
</div>

<h1><%= @user.full_name %></h1>

<h2>Mon panier en cours</h2>
<% if @current_basket %>

  <table>
    <thead>
      <tr>
        <th>Produit</th>
        <th>Quantité</th>
        <th>Prix</th>
      </tr>
    </thead>
    <tbody>
    <% @current_basket.basket_items.each do |basket_item| %>
      <tr>
        <td><%= basket_item.product.name %></td>
        <td>x<%= basket_item.quantity %></td>
        <td><%= basket_item.price %> €</td>
      </tr>
    <% end %>
  </tbody>
<% end %>

<% if @finished_baskets %>
  <ul>
    <% @finished_baskets.each do |basket| %>
      <li>
        <%= basket.basket_items.count %> Vos anciens panier
      </li>
    <% end %>
  </ul>
<% end %>
